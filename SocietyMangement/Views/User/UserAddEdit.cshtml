@model SocietyMangement.Models.UserModel

<h2>Add/Edit User</h2>
<section class="section">
    <div class="row">
        <div class="col-lg">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Form</h5>

                    <form asp-action="UserSave" method="post">
                        <input type="hidden" asp-for="UserID" />

                        <div class="row mb-3">
                            <label asp-for="UserName" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="UserName" placeholder="Enter Name">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter Phone Number">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="Role" class="col-sm-2 col-form-label">Role</label>
                            <div class="col-sm-10">
                                <select id="Role" asp-for="Role" class="form-control">
                                    <option value="Admin">Admin</option>
                                    <option value="Resident">Resident</option>
                                    <option value="Security">Security</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="FlatID " class="col-sm-2 col-form-label">FlatNumber</label>
                            <div class="col-sm-10">
                                <select asp-for="FlatID"
                                        asp-items="@(new SelectList(ViewBag.FlatNumber, "FlatID", "FlatNumber"))"
                                    class="form-control">
                                <option value="">Select Flat</option>
                            </select>

                                <span asp-validation-for="FlatID" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label for="Status" class="col-sm-2 col-form-label">Status</label>
                            <div class="col-sm-10">
                                <select id="Status" asp-for="Status" class="form-control">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                    <option value="Banned">Banned</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <center>
                                <div class="col-sm-5">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a asp-action="UserList" asp-controller="User">
                                        <button type="button" class="btn btn-danger">Cancel</button>
                                    </a>
                                </div>
                            </center>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</section>
